<h1>Table 1</h1>
<table border="1">
  <thead>
    <tr>
      <% @table1.headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @table1.each do |row| %>
      <tr>
        <% row.each do |_, value| %>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

